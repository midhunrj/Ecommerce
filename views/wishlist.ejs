        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <% if (wishlist.length === 0) { %>
                                <div class="wishlist-empty-message text-center">
                                    <img src="/assets/imgs/page/empty-wishlist.png" alt="Empty Wishlist Illustration" class="empty-wishlist-illustration">
                                    <h3 class="empty-wishlist-heading">Your Wishlist is Empty</h3>
                                    <p class="empty-wishlist-description">You haven't added any items to your wishlist yet. Explore our products and add your favorites!</p>
                                </div>
                            <% } else{ %>
                            <table class="table shopping-summery text-center">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock Status</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0;i<wishlist.length;i++) { %>
                                    <tr>
                                        <td class="image product-thumbnail"><img src="./productImage/<%=wishlist[i].image[0] %>" alt="#"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href="shop-product-right.html"><%= wishlist[i].productname %></a></h5>
                                            <p class="font-xs"><% wishlist[i].Brand %><br> <%= wishlist[i].description %>
                                            </p>
                                        </td>
                                        <td class="price" data-title="Price"><span>&#8377;<%= wishlist[i].price %> </span></td>
                                        <td class="text-center" data-title="Stock">
                                            
                                           <% if(wishlist[i].stock>0){%>
                                                <span class="text-success font-weight-bold">In Stock</span>
                                           <% }else{%>
                                            <span class="text-danger font-weight-bold">Out of stock</span>
                                           <%}%>

                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <% if(wishlist[i].stock>0){%>
                                            <button class="btn btn-sm  " style="cursor: pointer;"   onclick="addToCart('<%= wishlist[i]._id %>')"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                            <% }else {%>
                                                <button class="btn btn-sm disabled-btn"  style="cursor:not-allowed; pointer-events: none; " disabled aria-disabled="true" onclick="addToCart('<%= wishlist[i]._id %>')"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                            <% } %>
                                        </td>
                                        <td class="action" data-title="Remove"><a href="/removewishlist/<%=wishlist[i]._id %>"><i class="fi-rs-trash"></i></a></td>
                                    </tr>
                                    <% } %>
                                    
                                </tbody>
                            </table>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
