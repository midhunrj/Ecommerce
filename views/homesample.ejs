    <script>

        document.addEventListener('DOMContentLoaded', function () {
            const timeRangeFilter = document.getElementById('timeRangeFilter');
            const fetchDataButton = document.getElementById('fetchDataButton');
            let myCharts = []; // Array to store chart instances
    
            fetchData();
    
            fetchDataButton.addEventListener('click', fetchData);
            timeRangeFilter.addEventListener('change', fetchData); // Add event listener for filter change
    
            async function fetchData() {
                try {
                    const selectedTimeRange = timeRangeFilter.value;
                    const salesData = await fetchChartData('saleschart', selectedTimeRange);
                    const ordersData = await fetchChartData('orderschart', selectedTimeRange);
                    const revenueData = await fetchChartData('revenuechart', selectedTimeRange);
                    const productCountData = await fetchChartData('productCountChart', selectedTimeRange);
    
                    // Destroy existing charts
                    myCharts.forEach(chart => chart.destroy());
                    myCharts = []; // Clear the array
    
                    // Render charts
                    myCharts.push(renderChart('salesChart', salesData, selectedTimeRange));
                    myCharts.push(renderChart('ordersChart', ordersData, selectedTimeRange));
                    myCharts.push(renderChart('revenueChart', revenueData, selectedTimeRange));
                    myCharts.push(renderChart('productCountChart', productCountData, selectedTimeRange));
                } catch (error) {
                    console.error('Error fetching data:', error);
                }
            }
    
            async function fetchChartData(endpoint, timeRange) {
                const response = await fetch(`/admin/${endpoint}?timeRange=${timeRange}`);
                return response.json();
            }
    
            function renderChart(chartId, data, timeRange) {
    const ctx = document.getElementById(chartId).getContext('2d');

    let chart; // Declare the chart variable here

    switch (chartId) {
        case 'salesChart':
        case 'revenueChart':
            chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.labels,
                    datasets: data.datasets.map(dataset => ({
                        label: dataset.label,
                        data: dataset.data,
                        backgroundColor: 'rgb(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        fill: true,
                        tension: 0.2
                    }))
                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 0
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Time'
                            }
                        }
                    }
                }
            });
            break;
        case 'ordersChart':
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.labels,
                    datasets: data.datasets.map(dataset => ({
                        label: dataset.label,
                        data: dataset.data,
                        borderColor: 'rgb(75, 192, 192)',
                        fill: false,
                        tension: 0.2
                    }))
                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 0
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Time'
                            }
                        }
                    }
                }
            });
            break;
        case 'productCountChart':
            chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.labels,
                    datasets: data.datasets.map(dataset => ({
                        label: dataset.label,
                        data: dataset.data,
                        backgroundColor: ['rgb(75, 192, 192)', 'rgb(255, 205, 86)', 'rgb(54, 162, 235)', 'rgb(255, 99, 132)'],
                    }))

                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
