<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Cropping</title>
  <!-- Include Cropper.js library -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Image Cropping</h1>
    <!-- Input for selecting an image -->
    <input type="file" id="inputImage" accept="image/*">
    <!-- Container for displaying the image to be cropped -->
    <div>
      <img id="image" src="" alt="Image to crop">
    </div>
    <!-- Button to trigger cropping -->
    <button id="cropButton">Crop Image</button>
    <!-- Container for displaying the cropped image -->
    <div>
      <h2>Cropped Image</h2>
      <canvas id="croppedImage"></canvas>
    </div>
  </div>

  <!-- Include Cropper.js library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>

  <script>
    // Function to handle image selection and cropping
    document.getElementById('inputImage').addEventListener('change', function(event) {
      var input = event.target;
      var reader = new FileReader();
      reader.onload = function() {
        var dataURL = reader.result;
        // Display the selected image
        var image = document.getElementById('image');
        image.src = dataURL;
        // Initialize Cropper.js
        var cropper = new Cropper(image, {
          aspectRatio: 16 / 9, // Set aspect ratio (optional)
          crop: function(event) {
            console.log(event.detail.x);
            console.log(event.detail.y);
            console.log(event.detail.width);
            console.log(event.detail.height);
            console.log(event.detail.rotate);
            console.log(event.detail.scaleX);
            console.log(event.detail.scaleY);
          }
        });
        // Save Cropper.js instance to be used later
        document.getElementById('cropButton').addEventListener('click', function() {
          // Get cropped canvas
          var canvas = cropper.getCroppedCanvas();
          // Display cropped image
          var croppedImage = document.getElementById('croppedImage');
          croppedImage.width = canvas.width;
          croppedImage.height = canvas.height;
          croppedImage.getContext('2d').drawImage(canvas, 0, 0, canvas.width, canvas.height);
        });
      };
      reader.readAsDataURL(input.files[0]);
    });
  </script>
</body>
</html>
